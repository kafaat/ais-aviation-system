# ========================================
# AIS Aviation System - Production Docker Environment Variables
# ========================================
# Copy this file to .env.prod and fill in your values
# Uses Docker service names (mysql, redis) instead of localhost

# ========================================
# App Configuration
# ========================================
VITE_APP_ID=ais-aviation-system
NODE_ENV=production

# ========================================
# Database Configuration
# ========================================
# Uses Docker service name 'db' instead of localhost
DATABASE_URL=mysql://ais_user:your-secure-db-password@db:3306/ais_aviation

# Docker MySQL credentials (used by docker-compose.prod.yml)
DB_ROOT_PASSWORD=your-mysql-root-password
DB_NAME=ais_aviation
DB_USER=ais_user
DB_PASSWORD=your-secure-db-password

# ========================================
# Redis Configuration (for BullMQ queues)
# ========================================
# Uses Docker service name 'redis' instead of localhost
REDIS_URL=redis://redis:6379

# ========================================
# Authentication & Security
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CSRF_SECRET=your-csrf-secret-change-this-in-production

# OAuth Configuration
OAUTH_SERVER_URL=https://your-production-domain.com
OWNER_OPEN_ID=owner-open-id-here

# ========================================
# Built-in Forge API (Manus AI)
# ========================================
BUILT_IN_FORGE_API_URL=https://api.manus.space
BUILT_IN_FORGE_API_KEY=your-forge-api-key-here

# ========================================
# Payment Gateway - Stripe
# ========================================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# ========================================
# Email Service (Optional)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=AIS Aviation System <noreply@ais.com>

# ========================================
# AI Features (Optional)
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ========================================
# AWS S3 Storage (Optional)
# ========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=ais-aviation-files

# ========================================
# Application Settings
# ========================================
PORT=3000
FRONTEND_URL=https://your-production-domain.com
COOKIE_DOMAIN=your-production-domain.com
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# Feature Flags (Optional)
# ========================================
ENABLE_AI_CHAT=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_MULTI_CURRENCY=true
ENABLE_PWA=true

# ========================================
# Logging & Monitoring
# ========================================
LOG_LEVEL=info
LOG_PRETTY=false

# ========================================
# Sentry Error Tracking (Optional)
# ========================================
SENTRY_DSN=https://your-key@sentry.io/your-project-id
VITE_SENTRY_DSN=https://your-key@sentry.io/your-project-id
SENTRY_RELEASE=ais-aviation-system@1.0.0
VITE_SENTRY_RELEASE=ais-aviation-system@1.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ERROR_SAMPLE_RATE=1.0

# ========================================
# Development Tools (disabled in production)
# ========================================
DEBUG=false
ENABLE_QUERY_LOGGING=false

# ========================================
# VITE app URL
# ========================================
VITE_APP_URL=https://your-production-domain.com
