# ========================================
# AIS Aviation System - Production Environment
# ========================================
# IMPORTANT: All secrets should be stored in a secure secret manager
# (AWS Secrets Manager, Azure Key Vault, HashiCorp Vault, etc.)
# DO NOT commit this file with real values to version control

# App Configuration
VITE_APP_ID=ais-aviation-system
NODE_ENV=production

# Database Configuration
# Use read replicas and connection pooling for production
DATABASE_URL=mysql://prod_user:CHANGE_ME@prod-db-host:3306/ais_aviation_prod
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50

# Authentication & Security
JWT_SECRET=CHANGE_ME_TO_A_SECURE_RANDOM_64_CHAR_MINIMUM_SECRET
OAUTH_SERVER_URL=https://oauth.manus.space
OWNER_OPEN_ID=production-owner-id

# Built-in Forge API (Manus AI)
BUILT_IN_FORGE_API_URL=https://api.manus.space
BUILT_IN_FORGE_API_KEY=CHANGE_ME_PRODUCTION_API_KEY

# Payment Gateway - Stripe (LIVE MODE)
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME

# Email Service
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=CHANGE_ME_SENDGRID_API_KEY
EMAIL_FROM=AIS Aviation System <noreply@ais.com>

# AI Features
OPENAI_API_KEY=sk-CHANGE_ME

# AWS S3 Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_S3_BUCKET=ais-aviation-production

# Application Settings
PORT=3000
FRONTEND_URL=https://ais-aviation-system.com

# Session cookie settings (production - strict security)
COOKIE_DOMAIN=.ais-aviation-system.com
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
SESSION_MAX_AGE=86400000

# Rate Limiting (strict for production)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_MULTI_CURRENCY=true
ENABLE_PWA=true

# Logging & Monitoring
LOG_LEVEL=warn
LOG_PRETTY=false

# Monitoring/APM Integration
SENTRY_DSN=https://CHANGE_ME@sentry.io/project-id
DATADOG_API_KEY=CHANGE_ME
NEW_RELIC_LICENSE_KEY=CHANGE_ME

# Development Tools (disabled in production)
DEBUG=false
ENABLE_QUERY_LOGGING=false

# Security Headers
ENABLE_HELMET=true
ENABLE_CORS_STRICT=true
CORS_ALLOWED_ORIGINS=https://ais-aviation-system.com,https://www.ais-aviation-system.com

# Health Check
HEALTH_CHECK_PATH=/health
