# AIS Aviation System - Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://ais_user:CHANGE_ME@postgres:5432/ais
DB_USER=ais_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Stripe Configuration
# ============================================
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME

# ============================================
# JWT & Authentication
# ============================================
JWT_SECRET=CHANGE_ME_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# Manus OAuth
# ============================================
MANUS_OAUTH_CLIENT_ID=CHANGE_ME
MANUS_OAUTH_CLIENT_SECRET=CHANGE_ME
MANUS_OAUTH_CALLBACK_URL=https://ais.example.com/api/auth/callback

# ============================================
# Sentry (Error Tracking)
# ============================================
SENTRY_DSN=https://CHANGE_ME@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# Email Service (SendGrid, Mailgun, etc.)
# ============================================
EMAIL_SERVICE_API_KEY=CHANGE_ME
EMAIL_FROM=noreply@ais.example.com
EMAIL_FROM_NAME=AIS Aviation System

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3000
APP_URL=https://ais.example.com
API_URL=https://ais.example.com/api

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=https://ais.example.com
CORS_CREDENTIALS=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Feature Flags
# ============================================
FEATURE_LOYALTY_PROGRAM=true
FEATURE_SEAT_SELECTION=true
FEATURE_MEAL_SELECTION=false
FEATURE_GROUP_BOOKING=false

# ============================================
# Currency & Localization
# ============================================
DEFAULT_CURRENCY=SAR
DEFAULT_LOCALE=ar-SA
SUPPORTED_CURRENCIES=SAR,USD,EUR

# ============================================
# Business Rules
# ============================================
BOOKING_EXPIRY_MINUTES=15
CANCELLATION_WINDOW_HOURS=24
REFUND_PROCESSING_DAYS=7

# ============================================
# Monitoring & Alerts
# ============================================
HEALTH_CHECK_INTERVAL=30000
ALERT_EMAIL=ops@ais.example.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/CHANGE_ME

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ais-backups
BACKUP_S3_REGION=us-east-1

# ============================================
# SSL/TLS Configuration
# ============================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ============================================
# Performance Tuning
# ============================================
DB_POOL_MIN=10
DB_POOL_MAX=50
REDIS_MAX_CONNECTIONS=50
CACHE_TTL_SECONDS=300

# ============================================
# Security
# ============================================
HELMET_ENABLED=true
CSRF_ENABLED=true
SESSION_SECRET=CHANGE_ME_RANDOM_STRING_AT_LEAST_32_CHARS

# ============================================
# Third-Party Integrations (Future)
# ============================================
# CURRENCY_EXCHANGE_API_KEY=CHANGE_ME
# SMS_SERVICE_API_KEY=CHANGE_ME
# ANALYTICS_API_KEY=CHANGE_ME
