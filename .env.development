# ========================================
# AIS Aviation System - Development Environment
# ========================================

# App Configuration
VITE_APP_ID=ais-aviation-system
NODE_ENV=development

# Database Configuration
DATABASE_URL=mysql://root:password@localhost:3306/ais_aviation_dev

# Authentication & Security
JWT_SECRET=dev-secret-key-not-for-production-use-only
OAUTH_SERVER_URL=https://oauth.manus.space
OWNER_OPEN_ID=dev-owner-id

# Built-in Forge API (Manus AI)
BUILT_IN_FORGE_API_URL=https://api.manus.space
BUILT_IN_FORGE_API_KEY=dev-forge-api-key

# Payment Gateway - Stripe (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_dev
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Email Service (Optional - use mailtrap.io for dev)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your-mailtrap-user
EMAIL_PASSWORD=your-mailtrap-password
EMAIL_FROM=AIS Aviation Dev <dev@ais.local>

# AI Features (Optional)
OPENAI_API_KEY=sk-your-openai-api-key-dev

# AWS S3 Storage (Optional - use localstack for dev)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_S3_BUCKET=ais-aviation-dev

# Application Settings
PORT=3000
FRONTEND_URL=http://localhost:3000

# Session cookie settings (dev)
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Rate Limiting (relaxed for dev)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_LOYALTY_PROGRAM=true
ENABLE_MULTI_CURRENCY=true
ENABLE_PWA=true

# Logging & Monitoring (verbose for dev)
LOG_LEVEL=debug
LOG_PRETTY=true

# Development Tools
DEBUG=true
ENABLE_QUERY_LOGGING=true
